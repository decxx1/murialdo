---
import Layout from '@/layouts/Layout.astro';
import Breadcrumb from '@/components/Breadcrumb.astro';
import SportsBento from '@/components/SportsBento.astro';

const preloadImages = [
	{
		href:"/images/deportes/deportes-hero.webp",
		as: "image",
		type: "image/webp",
	}
];

const deportes = [
    
    {
        title: "Fútbol",
        description: "Rama masculina",
        href: "/deportes/futbol",
        imgSrc: "/images/deportes/futbol.webp",
        variant: "wide"
    },
    {
        title: "Disciplinas deportivas",
        href: "/deportes",
        variant: "none"
    },
    {
        title: "Vóley",
        description: "Rama femenina",
        href: "/deportes/voley",
        imgSrc: "/images/deportes/voley.webp",
        variant: "vertical"
    },
    {
        title: "Hockey sobre césped",
        description: "Rama femenina, masculina y mamys hockey",
        href: "/deportes/hockey-cesped",
        imgSrc: "/images/deportes/hockey-cesped.webp",
        variant: "wide"
    },
    {
        title: "Tenis",
        description: "Mixto",
        href: "/deportes/tenis",
        imgSrc: "/images/deportes/tenis.webp",
        variant: "vertical"
    },
    {
        title: "Patinaje artístico",
        description: "Mixto",
        href: "/deportes/patinaje-artistico",
        imgSrc: "/images/deportes/patinaje-artistico.webp",
        variant: "default"
    },
    {
        title: "Hockey sobre patines",
        description: "Rama femenina y masculina",
        href: "/deportes/hockey-patines",
        imgSrc: "/images/deportes/hockey-patines.webp",
        variant: "default"
    },
    {
        title: "Básquet",
        description: "Mixto hasta los 12 años",
        href: "/deportes/basquet",
        imgSrc: "/images/deportes/basquet.webp",
        variant: "wide"
    },
    {
        title: "Atletismo",
        description: "Mixto",
        href: "/deportes/atletismo",
        imgSrc: "/images/deportes/atletismo.webp",
        variant: "default"
    },
    {
        title: "Fútsal",
        description: "Rama masculina",
        href: "/deportes/futsal",
        imgSrc: "/images/deportes/futsal.webp",
        variant: "default"
    },
    
];
---

<Layout
	title="Deportes - Club Leonardo Murialdo"
	canonical="https://clubleonardomurialdo.com.ar/deportes"
	metaDescription="Conoce todos los deportes que ofrece el Club Leonardo Murialdo. Fútbol, básquet, hockey, vóley, tenis y más."
	metaImg="https://clubleonardomurialdo.com.ar/images/deportes/deportes-hero.webp"
	preLoad={preloadImages}
>
	<Breadcrumb title="Nuestros Deportes" img="/images/deportes/deportes-hero.webp" filter />
	
    <section class="py-16 px-4 mx-auto max-w-screen-xl sm:py-20 lg:px-6">
        <h2 class="text-white font-bold text-3xl text-center">Todos los deportes son de competencia y federados</h2>
        <p class="text-white text-xl text-center">A partir de los 5 años</p>
    </section>
    <section class="py-16 px-4 mx-auto max-w-screen-xl sm:py-20 lg:px-6 relative">
        <div class="absolute inset-0 flex items-center justify-center pointer-events-none z-0 overflow-hidden">
            <img 
                src="/images/logo/club-leonardo-murialdo.svg" 
                alt="Logo Club Leonardo Murialdo" 
                class="w-4/5 max-w-3xl opacity-5 select-none drop-shadow"
            />
        </div>
        <div class="grid auto-rows-[256px] grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 sm:gap-6 md:gap-8 max-sm:mx-4">
            {deportes.map((deporte, index) => {
                // Aplicar orden especial para el primer y segundo elemento
                let orderClass = "";
                if (index === 0) {
                    // Primer elemento: orden normal en pantallas grandes, segundo en pequeñas
                    orderClass = "order-2 sm:order-1";
                } else if (index === 1) {
                    // Segundo elemento: primer orden en pantallas pequeñas, segundo en grandes
                    orderClass = "order-1 sm:order-2";
                } else {
                    orderClass = "order-3";
                }
                
                return (
                    <SportsBento 
                        title={deporte.title}
                        href={deporte.href}
                        imgSrc={deporte.imgSrc}
                        variant={deporte.variant}
                        className={orderClass}
                    />
                );
            })}
        </div>
    </section>
</Layout>
<style>
    .drop-shadow {
        filter: drop-shadow(0 0 10px rgba(255, 255, 255, 0.6)) blur(8px);
    }
</style>
