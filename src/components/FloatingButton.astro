<script>
    // Vanilla JavaScript for floating button functionality
    document.addEventListener('DOMContentLoaded', () => {
        const mainButton = document.getElementById('floating-main-button');
        const optionsContainer = document.getElementById('floating-options');
        let isOpen = false;

        // Ensure elements exist before adding event listeners
        if (!mainButton || !optionsContainer) return;

        // Toggle options visibility
        mainButton.addEventListener('click', () => {
            isOpen = !isOpen;
            
            if (isOpen) {
                optionsContainer.classList.remove('hidden');
                optionsContainer.classList.add('show-options');
                mainButton.classList.add('active');
            } else {
                optionsContainer.classList.remove('show-options');
                optionsContainer.classList.add('hide-options');
                mainButton.classList.remove('active');
                
                // After animation completes, hide the options
                setTimeout(() => {
                    if (!isOpen && optionsContainer) {
                        optionsContainer.classList.add('hidden');
                        optionsContainer.classList.remove('hide-options');
                    }
                }, 300);
            }
        });

        // Close options when clicking outside
        document.addEventListener('click', (event) => {
            if (!event.target || !(event.target instanceof Node)) return;
            const target = event.target as Node;
            const isClickInsideButton = mainButton.contains(target);
            const isClickInsideOptions = optionsContainer.contains(target);
            
            if (!isClickInsideButton && !isClickInsideOptions && isOpen) {
                isOpen = false;
                optionsContainer.classList.remove('show-options');
                optionsContainer.classList.add('hide-options');
                mainButton.classList.remove('active');
                
                setTimeout(() => {
                    if (!isOpen && optionsContainer) {
                        optionsContainer.classList.add('hidden');
                        optionsContainer.classList.remove('hide-options');
                    }
                }, 300);
            }
        });
    });
</script>

<style>
    .floating-button-container {
        position: fixed;
        bottom: 30px;
        right: 30px;
        z-index: 1000;
    }

    .floating-main-button {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background-color: #0047AB;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        border: none;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2), 0 0 0 0 rgba(255, 255, 255, 0.7);
        cursor: pointer;
        transition: all 0.3s ease;
        z-index: 1001;
        animation: pulse-white 2s infinite;
        position: relative;
    }
    
    @keyframes pulse-white {
        0% {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2), 0 0 0 0 rgba(255, 255, 255, 0.5);
        }
        70% {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2), 0 0 0 8px rgba(255, 255, 255, 0);
        }
        100% {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2), 0 0 0 0 rgba(255, 255, 255, 0);
        }
    }

    .floating-main-button:hover {
        transform: scale(1.05);
        background-color: var(--color-secondary);
        color: var(--color-tertiary);
    }

    .floating-main-button.active {
        background-color: var(--color-secondary);
        color: var(--color-tertiary);
    }

    .floating-options {
        position: absolute;
        bottom: 75px;
        right: 0;
        display: flex;
        flex-direction: column;
        gap: 15px;
        align-items: flex-end;
    }

    .floating-option {
        display: flex;
        align-items: center;
        padding: 10px 15px;
        border-radius: 25px;
        color: white;
        text-decoration: none;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease;
    }

    .floating-icon {
        width: 24px;
        height: 24px;
        margin-right: 8px;
    }

    .floating-text {
        font-size: 14px;
        font-weight: 500;
    }

    .whatsapp-option {
        background-color: #25D366;
    }

    .whatsapp-option:hover {
        background-color: #128C7E;
    }

    .location-option {
        background-color: #4285F4;
    }

    .location-option:hover {
        background-color: #3367D6;
    }

    .phone-option {
        background-color: #FF5722;
    }

    .phone-option:hover {
        background-color: #E64A19;
    }

    .hidden {
        display: none;
    }

    .show-options {
        animation: fadeIn 0.3s ease forwards;
    }

    .hide-options {
        animation: fadeOut 0.3s ease forwards;
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @keyframes fadeOut {
        from {
            opacity: 1;
            transform: translateY(0);
        }
        to {
            opacity: 0;
            transform: translateY(20px);
        }
    }

    @media screen and (max-width: 545px) {
        .floating-button-container {
            bottom: 20px;
            right: 20px;
        }

        .floating-main-button {
            width: 50px;
            height: 50px;
        }

        .floating-text {
            display: none;
        }

        .floating-option {
            padding: 10px;
            border-radius: 50%;
        }

        .floating-icon {
            margin-right: 0;
        }
    }
</style>
