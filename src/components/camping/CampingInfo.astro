---
import {
    EMAIL,
    PHONE,
    PHONE_FORMAT,
    WHATSAPP,
    WHATSAPP_FORMAT
} from 'astro:env/client';
import Envelope from "@/assets/icons/contact/email.svg";
import Phone from "@/assets/icons/contact/phone-circle.svg";
import WhatsApp from "@/assets/icons/contact/whatsapp-circle.svg";
import Check from "@/assets/icons/check-circle.svg";
---
<section class="container mx-auto py-20">
    <div class="grid grid-cols-1 md:grid-cols-12 gap-8">
        <div class="md:col-span-8 bg-light text-primary border-2 border-primary rounded-3xl px-4 py-4">
            <h2 class="text-center font-bold text-3xl mb-3">Camping Club Leonardo Murialdo</h2>
            <p class="text-center font-medium text-xl mb-6">Un entorno natural, seguro y relajante.</p>
            <div class="grid grid-cols-1 sm:grid-cols-2 items-center justify-center">
                <ol class="text-lg">
                    <li class="mb-2"><Check class="mr-2 w-6 h-auto inline text-green-700" />No requiere reserva</li>
                    <li class="mb-2"><Check class="mr-2 w-6 h-auto inline text-green-700" />Cuenta con piscina</li>
                    <li class="mb-2"><Check class="mr-2 w-6 h-auto inline text-green-700" />Cantidad de Plazas: 600 personas</li>
                    <li class="mb-2"><Check class="mr-2 w-6 h-auto inline text-green-700" />Zona de parrillas</li>
                    <li class="mb-2"><Check class="mr-2 w-6 h-auto inline text-green-700" />Servicio de limpieza diario</li>
                </ol>
                <ol class="text-lg">
                    <li class="mb-2"><Check class="mr-2 w-6 h-auto inline text-green-700" />Servicio de transporte turístico</li>
                    <li class="mb-2"><Check class="mr-2 w-6 h-auto inline text-green-700" />Servicio de organización de eventos</li>
                    <li class="mb-2"><Check class="mr-2 w-6 h-auto inline text-green-700" />Servicio de seguridad 24/7</li>
                    <li class="mb-2"><Check class="mr-2 w-6 h-auto inline text-green-700" />Servicio de asistencia médica</li>
                    <li class="mb-2"><Check class="mr-2 w-6 h-auto inline text-green-700" />Servicio de WiFi gratuito</li>
                </ol>
            </div>
        </div>
        <div class="md:col-span-4 bg-light border-2 border-primary rounded-3xl px-4 py-4">
            <h2 class="font-bold text-2xl mb-6 text-primary">Contacto</h2>
            <ul>
                <li>
                    <a class="text-lg inline-flex text-primary hover:text-secondary break-all whitespace-normal" href={`mailto:${EMAIL}`} target="_blank">
                        <Envelope class="mr-2 -mt-1 w-10 h-auto inline-flex text-primary" />{EMAIL}
                    </a>
                </li>
                <li>
                    <a class="text-lg inline-flex text-primary hover:text-secondary" href={`tel:${PHONE_FORMAT}`} target="_blank">
                        <Phone class="mr-2 -mt-1 w-10 h-auto inline-flex text-primary" />{PHONE}
                    </a>
                </li>
                <li>
                    <a class="text-lg inline-flex text-primary hover:text-secondary" href={`https://wa.me/${WHATSAPP_FORMAT}`} target="_blank">
                        <WhatsApp class="mr-2 -mt-1 w-10 h-auto inline-flex text-green-400" />{WHATSAPP}
                    </a>
                </li>
                <li>
                    <p class="text-lg text-primary">
                        <strong>Medios de pago:</strong> Mercado Pago, transferencias o efectivo
                    </p>
                </li>
            </ul>
        </div>
    </div>
</section>